		<h2>Demo</h2>
  </header>
	<p>Click the button to see the progress bar fill up from 0 to 100%.</p>

	<div class="section-example">
		<div style="display: flex; gap: 1rem; align-items: center;">
			<progress style="flex-grow: 99" max="100" value="0" id="progressBarExample"></progress>
			<button id="progressButtonExample">Progress!</button>
		</div>
	</div>

<script>
const progressBar = document.getElementById('progressBarExample');
const progressButton = document.getElementById('progressButtonExample');
progressButton.addEventListener('click', function () {
var num = 0;
var id = setInterval(frame, 5);
function frame() {
if (num== 100) {
clearInterval(id);
} else {
num = num + .2;
progressBar.setAttribute('value', num);
}
}
});
</script>

